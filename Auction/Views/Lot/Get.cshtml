@using Auction.DTO.Partial
@using Auction.Services
@model Lot


@{
    ViewBag.Title = "Lot";
}

<link rel="stylesheet" href="~/css/create.css"/>

@{
    await Html.RenderPartialAsync("_PageTitle", new ColDescription{
        Title = Model.Title, 
        Description = new List<string>
        {Model.Description}
    });
}

<div class="row">
    <div class="col-lg-7 p-0">
        <div class="image-container">
            <img src="@Model.ImageUrl" alt="your image" class="uploader-image"/>
        </div>
    </div>
    <div class="col-lg-5">
        <div >
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="page-info">
                <p class="text-info type-28">current rate US$ @Model.Funded</p>
                <p class="text-muted">pledged of US$ @Model.Goal goal</p>
            </div>
        </div>
        <div class="page-info">
            <p class="type-28 text-secondary">142</p>
            <p class="text-muted">backers</p>
        </div>
        <div class="page-info">
            <p class="type-28 text-secondary">25</p>
            <p class="text-muted">days to go</p>
        </div>
        <div>
            @if (User.IsInRole(Constants.AdminRole) || (string) ViewData["UserId"] == Model.AppUserId)
            {
                <div class="row d-flex justify-content-around">
                    <a
                        asp-controller="Lot" asp-action="Update" asp-route-lotId="@Model.Id"
                        role="button" class="btn btn-outline-dark btn-sm">
                        Update
                    </a>
                    <form method="post" asp-controller="Lot" asp-action="Delete" asp-route-lotId="@Model.Id">
                        <span id="confirmDelete" style="display: none;">
                            <span>Are you sure you want to delete this lot?</span>
                            <button
                                type="submit" class="btn btn-outline-danger btn-sm"
                                onclick="onDelete()">
                                Yes
                            </button>
                            <button
                                type="button" class="btn btn-outline-primary btn-sm"
                                onclick="dropDelete()">
                                No
                            </button>
                        </span>
                        <span id="delete">
                            <button
                                type="button" class="btn btn-outline-danger btn-sm"
                                onclick="onDelete()">
                                Delete
                            </button>
                        </span>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function onDelete(){
            $('#confirmDelete').show();
            $('#delete').hide();
        }
        
        function dropDelete(){
            $('#confirmDelete').hide();
            $('#delete').show();
        }
    </script>
}

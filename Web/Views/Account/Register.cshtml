@model Web.DTO.Account.RegisterViewModel

@{
    ViewBag.Title = "User Register";
}

@if (ViewBag.Alert != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Info!</strong> @ViewBag.Alert
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="center ">
    <link rel="stylesheet" href="~/css/signin.css"/>
    <form method="post" asp-controller="Account" asp-action="Register" class="form-signin">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">ConfirmPassword</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</div>
@using WebApplication4
@model WebApplication4.DTO.Comment.CommentsView

@{
    var url = $"/Comment/GetComments?lotId={Model.LotId}&take={Model.Take}&skip={Model.Skip}";
}

@* <ul class="list-unstyled" id="comments-list"> *@
    @foreach (var i in Model.Comments)
    {
        <li class="media my-3">
            <div class="media-body comment-card" id="comment-@i.Id">
                <div class="row px-3">
                    <h5 class="mt-0 mb-1 d-flex flex-grow-1">@i.AppUser.UserName.Split('@')[0]</h5>
                    @if (User.IsInRole(Constants.AdminRole))
                    {
                        <div class="position-relative w-20p px-3 comment" data-delete-comment="@i.Id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash position-absolute center w-20p delete-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg" >
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </div>
                    }
                </div>
                @i.Text
            </div>
        </li>
    }
    <div id="load-mark" data-url="@url"></div>
@* </ul> *@
